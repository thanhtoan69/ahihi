# Environmental Platform - Production Environment Variables
# Copy this file to .env and update the values for production

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_wordpress_password_here

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Application Configuration
WORDPRESS_ENV=production
WORDPRESS_DEBUG=false

# SSL Configuration
SSL_ENABLED=true
DOMAIN_NAME=environmentalplatform.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups

# Monitoring Configuration
PROMETHEUS_RETENTION=90d
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# Security Configuration
FAIL2BAN_ENABLED=true
WAF_ENABLED=true

# Performance Configuration
REDIS_MAXMEMORY=256mb
MYSQL_INNODB_BUFFER_POOL_SIZE=512M

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Alert Configuration
ALERT_EMAIL=admin@environmentalplatform.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
