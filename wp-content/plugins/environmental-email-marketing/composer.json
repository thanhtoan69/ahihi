{
    "name": "environmental-platform/email-marketing",
    "description": "Environmental Email Marketing Plugin for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Environmental Platform Team",
            "email": "dev@environmentalplatform.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "EnvironmentalEmailMarketing\\": "includes/",
            "EnvironmentalEmailMarketing\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
